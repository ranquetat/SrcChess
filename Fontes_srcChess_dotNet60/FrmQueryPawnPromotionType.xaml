<Window x:Class="SrcChess2.FrmQueryPawnPromotionType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selection of the Pawn Promotion Piece" Height="192" Width="535" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <DockPanel Name="dockPanel1">
        <StackPanel Name="stackPanel1" DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Button Content="Ok" Height="23" Name="butOk" Width="75" IsDefault="True" Margin="10" Click="ButOk_Click" />
        </StackPanel>
        <GroupBox Header="Promotion Piece" Name="groupBox1" Margin="20">
            <UniformGrid Rows="1" Columns="5">
                <RadioButton Content="Queen" Height="16" Name="radioButtonQueen" HorizontalAlignment="Center" />
                <RadioButton Content="Rook" Height="16" Name="radioButtonRook" HorizontalAlignment="Center" />
                <RadioButton Content="Bishop" Height="16" Name="radioButtonBishop" HorizontalAlignment="Center" />
                <RadioButton Content="Knight" Height="16" Name="radioButtonKnight" HorizontalAlignment="Center" />
                <RadioButton Content="Pawn" Height="16" Name="radioButtonPawn" HorizontalAlignment="Center" />
            </UniformGrid>
        </GroupBox>
    </DockPanel>
</Window>
